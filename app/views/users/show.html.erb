<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "followers", user_followers_path(@user)%>
      <%= link_to "following", user_followings_path(@user)%>
      <ul style="list-style:none;">
        <li><span class="label label-default">E-Mail</span> <%= @user.email %></li>
        <li><span class="label label-default">Place</span> <%= @user.location %></li>
      </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>